<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GOEAT.Go_Eat.investigation_page"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_weight="5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text=" 오늘 같은 화창한 날씨에는"
            android:textSize="27dp"
            android:textColor="@color/font"
            android:gravity=""
            android:layout_weight="10"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="6"/>
        <Spinner
            android:id="@+id/select_place"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shadow_button"
            android:layout_height="44dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:layout_weight="6"
            android:fontFamily="@font/pureunjeonnam"
            android:layout_gravity="center"
            android:textColor="@color/font"
            android:text="에서"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/select_who"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/shadow_button"
            android:layout_height="44dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:layout_weight="5"
            android:fontFamily="@font/pureunjeonnam"
            android:textColor="@color/font"
            android:layout_gravity="center"
            android:text="랑 함께"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <Spinner
            android:id="@+id/select_emotion"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:background="@drawable/shadow_button"
            android:layout_weight="1"
            android:layout_height="44dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:textSize="27dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="@font/pureunjeonnam"
            android:text=" 기분으로"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리 낮은"
            android:textColor="@color/font"
            android:layout_gravity="center"
            android:shadowColor="#80000000"
            android:fontFamily="@font/pureunjeonnam"
            android:textSize="17sp"
            android:background="@drawable/shadow_button"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리 상관없이"
            android:textColor="@color/font"
            android:shadowColor="#80000000"
            android:fontFamily="@font/pureunjeonnam"
            android:textSize="17sp"
            android:background="@drawable/shadow_button"
            android:layout_gravity="center"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음식을 고르고 싶어요!"
            android:textColor="@color/font"
            android:fontFamily="@font/pureunjeonnam"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="27dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/pureunjeonnambold"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:text="확인"/>
    </LinearLayout>


</LinearLayout>