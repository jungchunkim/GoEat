<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetCharActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:src="@drawable/arrow"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="17"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/img_char"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:src="@drawable/mouse"/>

        <TextView
            android:id="@+id/tv_txtWithName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/font"
            android:fontFamily="@font/pureunjeonnam"
            android:text="싫어하는 음식\n들을 모두 골라주세요!"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="김치찌개"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="6dp">

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="초밥"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="짜장면"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="6dp">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="모밀"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="돈가스"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="6dp">

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="해산물"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="떡볶이"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="6dp">

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="파스타"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="피자"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="6dp">

                <Button
                    android:id="@+id/btn_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="치킨"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/btn_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="햄버거"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="6dp">

                <Button
                    android:id="@+id/btn_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_button"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:shadowColor="#80000000"
                    android:text="쌀국수"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="17sp"/>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">

        <Button
            android:id="@+id/btn_next"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/button_background"
            android:text="다음"
            android:fontFamily="@font/pureunjeonnambold"
            android:textColor="#FFFFFF"
            android:textSize="17dp"/>

    </LinearLayout>
</LinearLayout>