<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".TermsOfServices">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text="서비스를 위한 약관동의"
            android:textColor="@color/font"
            android:textSize="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text="전체동의"
            android:textColor="@color/font"
            android:textSize="14.5sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <CheckBox
            android:id="@+id/cp_all"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#979797" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text="Go Eat 이용약관 동의"
            android:textColor="@color/font"
            android:textSize="14.5sp" />

        <TextView
            android:id="@+id/click_see_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/pureunjeonnambold"
            android:onClick="onTermsItemViewClick"
            android:tag="usage"
            android:text="보기"
            android:textColor="#AFB8C9"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <CheckBox
            android:id="@+id/cp_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text="개인정보 수집이용 동의"
            android:textColor="@color/font"
            android:textSize="14.5sp" />

        <TextView
            android:id="@+id/click_see_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/pureunjeonnambold"
            android:onClick="onTermsItemViewClick"
            android:tag="privacy"
            android:text="보기"
            android:textColor="#AFB8C9"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <CheckBox
            android:id="@+id/cp_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text="마케팅 정보 메일, SMS 수신동의 (선택)"
            android:textColor="@color/font"
            android:textSize="14.5sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <CheckBox
            android:id="@+id/cp_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#979797" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/pureunjeonnam"
            android:text="본인은 만 14세 이상입니다."
            android:textColor="@color/font"
            android:textSize="14.5sp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <CheckBox
            android:id="@+id/cp_up14"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_checkbox"
            android:button="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/pureunjeonnam"
            android:lineSpacingExtra="5dp"
            android:text="개인정보보호법에 의해 만 14세 이상부터 Go Eat 이용이 가능합니다. \n첫 주문시 본인인증을 받고 있으며 만 14세 미만인 경우 개인정보가 삭제됩니다."
            android:textColor="@color/font"
            android:textSize="11sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_background_selector"
            android:enabled="false"
            android:fontFamily="@font/pureunjeonnambold"
            android:text="다음으로"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>


</LinearLayout>