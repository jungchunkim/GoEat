<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GOEAT.Go_Eat.Analysis_home_after"
    android:weightSum="100"
    android:orientation="vertical">


    <!--background넣기-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="horizontal"
        android:background="@color/mainPink">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_weight="2"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="14dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textColor="#ffffff"
            android:text="나를 위한 메뉴"
            android:fontFamily="@font/pureunjeonnambold"
            android:textSize="24dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5"/>
    </LinearLayout>


    <!--color 넣기-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:tabTextAppearance="@style/tab_text"
        app:tabIndicatorColor="@color/mainPink"
        android:layout_weight="8">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_weight="69"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:weightSum="17">

        <ImageView
            android:id="@+id/home_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:src="@drawable/ic_home_img" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <ImageView
            android:id="@+id/go_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/go_invest_prev" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <ImageView
            android:id="@+id/my_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/mypage_prev" />


    </LinearLayout>

</LinearLayout>