<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GOEAT.Go_Eat.NoticeActivity"
    android:background="@color/background"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/analysishome_top_bar"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:fontFamily="@font/pureunjeonnambold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
       <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_white"
            android:layout_centerVertical="true"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E5E5E5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="#F7F9FC"
        >
        <LinearLayout
            android:id="@+id/layout_notice2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_notice2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="공지사항2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="18sp"
                    android:gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="3dp"
                    />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:text="2020.12.02"
                    android:textColor="#73000000"
                    android:fontFamily="@font/pureunjeonnam"
                    android:textSize="12sp"
                    android:gravity="top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mypage_arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E5E5E5"
            />

        <LinearLayout
            android:id="@+id/layout_investigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/layout_notice1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_notice1"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="공지사항1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pureunjeonnam"
                        android:textSize="18sp"
                        android:gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="3dp"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:text="2020.12.01"
                        android:textColor="#73000000"
                        android:fontFamily="@font/pureunjeonnam"
                        android:textSize="12sp"
                        android:gravity="top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mypage_arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>



</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E5E5E5"
            />
</LinearLayout>
</LinearLayout>