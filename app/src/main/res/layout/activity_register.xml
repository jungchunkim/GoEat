<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trash.register_activity"
    android:layout_weight="1"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1200dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="235">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <TextView
                android:textColor="@color/font"
                android:fontFamily="@font/pureunjeonnam"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="회원가입"
                android:gravity="center_vertical"
                android:textSize="26dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="닉네임"/>
                <EditText
                    android:id="@+id/nick_name"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:hint="한글, 영문 2-8자 이내"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="이름"/>
                <EditText
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:hint="ex) 홍길동"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="이메일"/>
                <EditText
                    android:id="@+id/et_email"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:hint="ex) hurshey@naver.com"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="비밀번호"/>
                <EditText
                    android:id="@+id/et_pwd1"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:inputType="textPassword"
                    android:hint="비밀번호를 입력하세요."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="비밀번호 확인"/>
                <EditText
                    android:id="@+id/et_pwd2"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:hint="비밀번호를 입력하세요."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="성별"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="12"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/btn_male"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="@color/gray"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/pureunjeonnam"
                        android:layout_marginRight="12dp"
                        android:textSize="16sp"
                        android:text="남자"/>

                    <Button
                        android:id="@+id/btn_female"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/pureunjeonnam"
                        android:layout_marginLeft="12dp"
                        android:text="여자"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="생일"/>
                <TextView
                    android:id="@+id/tv_birth"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:hint="ex) 1900.01.01"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:weightSum="20"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/font"
                    android:fontFamily="@font/pureunjeonnam"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text="핸드폰 번호"/>
                <EditText
                    android:id="@+id/et_phoneNum"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/pureunjeonnam"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:hint="ex) 010-0000-0000"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/button_background"
                android:fontFamily="@font/pureunjeonnambold"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:text="인증번호 받기" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>