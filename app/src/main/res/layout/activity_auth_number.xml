<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trash.register_activity"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:src="@drawable/arrow"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호 입력"
            android:textSize="26dp"
            android:textColor="@color/font"
            android:fontFamily="@font/pureunjeonnam"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증번호를 입력해주세요."
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/pureunjeonnam"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:weightSum="4"
        >

        <EditText
            android:id="@+id/et_1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/pureunjeonnambold"
            android:inputType="number"
            android:textSize="35dp"


            />

        <EditText
            android:id="@+id/et_2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft = "15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/pureunjeonnambold"
            android:inputType="number"
            android:textSize="35dp"
            />
        <EditText
            android:id="@+id/et_3"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft = "15dp"

            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/pureunjeonnambold"
            android:inputType="number"
            android:textSize="35dp"
            />
        <EditText
            android:id="@+id/et_4"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft = "15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/pureunjeonnambold"
            android:inputType="number"
            android:textSize="35dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="코드가 틀렸습니다. 다시한번 확인해주세요"
            android:textColor="@color/mainPink"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코드가 안왔습니까?"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/pureunjeonnam"/>

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/pureunjeonnam"
                android:text="재전송"
                android:textColor="@color/mainPink"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_ok"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="확인"
            android:fontFamily="@font/pureunjeonnambold"
            android:textColor="#FFFFFF"
            android:textSize="17dp"/>
    </LinearLayout>




</LinearLayout>